<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/registrar"
    android:clickable="false"
    android:background="@drawable/prefondo2">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="67dp"
            android:weightSum="1">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Taxi Driver"
                android:id="@+id/textView"

                android:layout_gravity="center_horizontal"
                android:textSize="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crear  cuenta aqui"
                android:id="@+id/textView4"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.24"
                android:gravity="center"
                android:textColor="#ff000000"
                android:layout_marginTop="20dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="52dp"
                android:layout_marginTop="10dp">


                <EditText
                    android:layout_width="280dp"
                    android:layout_height="55dp"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:hint="usuario"
                    android:id="@+id/edit_usuario1"
                    android:gravity="center"
                    android:layout_marginLeft="60dp"
                    android:background="#FFD39B"
                    android:autoText="false"
                    android:maxLength="20" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.00"
                android:layout_marginTop="10dp">



                <EditText
                    android:layout_width="280dp"
                    android:layout_height="55dp"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:hint="Contraseña"
                    android:id="@+id/edit_contra1"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="60dp"
                    android:gravity="center"
                    android:background="#FFD39B"
                    android:maxLength="20" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:weightSum="1"
                android:layout_marginTop="10dp">

               <EditText
                    android:layout_width="280dp"
                    android:layout_height="55dp"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/edit_confContra1"
                    android:layout_gravity="center_horizontal"
                    android:hint="Confirmar contraseña"
                   android:layout_marginLeft="60dp"
                   android:gravity="center"
                   android:background="#FFD39B"
                   android:maxLength="20" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="52dp"
                android:weightSum="1"
                android:layout_marginTop="10dp">

              <EditText

                    android:layout_width="280dp"
                    android:layout_height="55dp"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/edit_email1"
                    android:hint="E-mail"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                  android:layout_marginLeft="60dp"
                  android:gravity="center"
                  android:background="#FFD39B"
                  android:autoText="false" />
            </LinearLayout>

            <Button
                android:layout_width="138dp"
                android:layout_height="wrap_content"
                android:text="Registrarse"
                android:id="@+id/btn_regis"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_margin="10dp" />

            <Button
                android:layout_width="109dp"
                android:layout_height="wrap_content"
                android:text="Cancelar"
                android:id="@+id/button4"
                android:layout_gravity="center_horizontal" />




        </LinearLayout>
    </ScrollView>

</RelativeLayout>
