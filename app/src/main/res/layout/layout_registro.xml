<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/registrar"
    android:clickable="false"
    android:background="@drawable/fondo3">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp"

        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Taxi Driver  "
            android:textSize="30dp"
            android:id="@+id/textView"

            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crear  cuenta aqui"

            android:id="@+id/textView4"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.13"
            android:gravity="center" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="52dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:textColor="#424242"
                android:text="Nombre :                        "
                android:id="@+id/textView2"
                android:layout_weight="0.07"
                android:layout_gravity="center_vertical"
                android:gravity="center" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="nick"
                android:id="@+id/edit_usuario1"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.00">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:text="Contraseña :                   "
                android:id="@+id/textView3"
                android:textColor="#424242"
                android:layout_weight="0.16"
                android:gravity="center"
                android:layout_gravity="center_horizontal" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:hint="contraseñaa"
                android:id="@+id/edit_contra1"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:text="Confirmar contraseña : "
                android:id="@+id/textView5"
                android:textColor="#424242"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.99"
                android:gravity="center"
                android:singleLine="false" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/edit_confContra1"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:text="E-mail :                            "
                android:id="@+id/textView6"
                android:textColor="#424242"
                android:layout_weight="0.99"
                android:gravity="center"
                android:layout_gravity="center_horizontal" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/edit_email1"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>

        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Registrarse"
            android:id="@+id/btn_regis"
            android:background="#ffff5500"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="Cancelar"
            android:layout_marginTop="20dp"
            android:background="#BDBDBD"
            android:id="@+id/button4"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</RelativeLayout>
